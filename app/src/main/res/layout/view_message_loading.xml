<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/loader_padding"
    android:layout_height="@dimen/tweets_loading_indicator_height">

    <ProgressBar
        android:id="@+id/pb_loading_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/ic_progress_indeterminate"/>

    <TextView
        android:id="@+id/tv_article_end_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/message_end_of_message"
        android:textStyle="bold"
        android:visibility="gone"/>
</FrameLayout>