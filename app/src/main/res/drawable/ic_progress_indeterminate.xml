<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360" >
    <shape
        android:shape="ring"
        android:innerRadius="@dimen/loading_indicator_inner_radius"
        android:thickness="@dimen/loading_indicator_thickness"
        android:useLevel="false">
        <size
            android:height="@dimen/loading_indicator_height"
            android:width="@dimen/loading_indicator_width" />

        <gradient
            android:endColor="@color/color_primary_dark"
            android:startColor="@color/color_primary_light"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>